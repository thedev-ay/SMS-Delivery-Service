{
    "compilerOptions": {
        "types": ["mocha", "node"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "lib",
        "sourceMap": true,
        "target": "esnext",
        "stripInternal": true
        },
        "exclude": ["node_modules"]
  }